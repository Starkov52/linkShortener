generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



                         
 model ShortLink {
  id          Int        @id @default(autoincrement())
  originalUrl String
  shortUrl    String     @unique
  users       UserData[] 
}

model UserData {
  id          Int       @id @default(autoincrement())
  date        String
  ip          String
  region      String?
  browser     String?
  os          String?
  shortLink   ShortLink @relation(fields: [shortLinkId], references: [id])
  shortLinkId Int
}

